script EventScript_PlayerPC{
    lockall
    setvar(VAR_0x8004, 1)
	special(DoPCTurnOnEffect)
	playse(SE_PC_ON)
	msgbox(gText_PlayerHouseBootPC, MSGBOX_DEFAULT)
	special(BedroomPC)
	waitstate
	releaseall
	end
}

script NewBarkTown_PlayersHouse_2F_EventScript_TurnOffPlayerPC{
    setvar(VAR_0x8004, 1)
	playse(SE_PC_OFF)
	special(DoPCTurnOffEffect)
	releaseall
	end
}

